{
  "name": "kliento",
  "version": "1.0.0",
  "author": {
    "email": "no-reply@relaycorp.tech",
    "name": "Relaycorp, Inc.",
    "url": "https://relaycorp.tech/"
  },
  "description": "Self-contained client authentication tokens",
  "type": "module",
  "typings": "build/lib/index.d.ts",
  "main": "build/lib/index.js",
  "repository": "https://github.com/CheVeraId/kliento-js/",
  "homepage": "https://docs.veraid.net/kliento-js/",
  "license": "MIT",
  "keywords": [
    "VeraId",
    "Kliento"
  ],
  "scripts": {
    "build": "run-s clean tsc",
    "fix": "run-s fix:*",
    "fix:prettier": "prettier \"src/**/*.ts\" --write",
    "fix:eslint": "eslint -c .eslintrc.mjs --fix .",
    "static-checks": "run-p static-checks:*",
    "static-checks:lint": "eslint -c .eslintrc.mjs .",
    "static-checks:prettier": "prettier \"src/**/*.ts\" --list-different",
    "test": "vitest run --coverage --coverage.thresholds.100",
    "test:integration": "exit 0",
    "tsc": "tsc",
    "doc-api": "typedoc src/index.ts --out build/docs",
    "clean": "del-cli build test"
  },
  "engines": {
    "node": ">=20"
  },
  "devDependencies": {
    "@relaycorp/eslint-config": "^2.0.56",
    "@relaycorp/shared-config": "^1.15.1",
    "@vitest/coverage-v8": "^3.1.1",
    "del-cli": "^5.1.0",
    "eslint": "^9.10.0",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.3.3",
    "ts-node": "^10.9.2",
    "typedoc": "^0.28.1",
    "typescript": "^5.8.2",
    "vitest": "^3.1.1"
  },
  "prettier": "@relaycorp/shared-config/.prettierrc.json",
  "publishConfig": {
    "access": "public",
    "tag": "latest"
  },
  "dependencies": {
    "@peculiar/asn1-schema": "^2.3.3"
  }
}
